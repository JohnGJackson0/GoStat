<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Default application theme. -->

    <style name="DefaultEditTextTheme">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_input</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name ="android:layout_marginStart">8dp</item>
        <item name ="android:layout_marginTop">16dp</item>
        <item name ="android:layout_marginEnd">8dp</item>
    </style>

    <style name="DefaultContentButtonTheme">
        <item name = "android:textStyle">bold</item>
        <item name = "android:textSize">@dimen/text_button</item>
        <item name = "android:background">@color/colorAccent</item>
        <item name = "android:textColor">@color/colorWhite</item>
        <item name ="android:layout_marginStart">8dp</item>
        <item name ="android:layout_marginTop">16dp</item>
        <item name ="android:layout_marginEnd">8dp</item>
    </style>

    <style name="DefaultCardView">
        <item name ="android:layout_margin">5dp</item>
        <item name ="android:layout_marginStart">5dp</item>
        <item name ="android:layout_marginEnd">5dp</item>
    </style>

    <style name="DefaultButtonTheme">
        <item name = "android:textStyle">bold</item>
        <item name = "android:textSize">@dimen/text_button</item>
        <item name = "android:background">@color/colorAccent</item>
        <item name = "android:textColor">@color/colorWhite</item>
    </style>

    <style name="DefaultSpinnerTheme">
        <item name = "android:popupElevation">5dp</item>
        <item name = "android:backgroundTintMode">add</item>
        <item name = "android:backgroundTint">@color/colorAccent</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:spinnerMode">dialog</item>
    </style>

    <style name="DefaultSpinnerThemeWithMargin">
        <item name = "android:popupElevation">5dp</item>
        <item name = "android:backgroundTintMode">add</item>
        <item name = "android:backgroundTint">@color/colorAccent</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:spinnerMode">dialog</item>
        <item name ="android:layout_marginStart">8dp</item>
        <item name ="android:layout_marginTop">16dp</item>
        <item name ="android:layout_marginEnd">8dp</item>

    </style>

    <style name = "DefaultTextViewLabel">
        <item name ="android:textSize">@dimen/text_size_label</item>
        <item name ="android:textColor">@color/colorPrimaryVariant</item>
        <item name ="android:layout_marginStart">8dp</item>
        <item name ="android:layout_marginTop">16dp</item>
        <item name ="android:layout_marginEnd">8dp</item>
    </style>

    <style name = "DefaultTextInstructionsLabel">
        <item name ="android:textSize">@dimen/text_important_snippet</item>
        <item name ="android:textColor">@color/colorPrimaryVariant</item>
        <item name ="android:textStyle">italic</item>
        <item name ="android:layout_marginStart">8dp</item>
        <item name ="android:layout_marginTop">16dp</item>
        <item name ="android:layout_marginEnd">8dp</item>
    </style>

    <style name = "DefaultTextViewTitle">
        <item name ="android:textSize">@dimen/text_size_title</item>
        <item name ="android:textColor">@color/colorPrimaryVariant</item>
        <item name ="android:layout_marginStart">8dp</item>
        <item name ="android:layout_marginTop">16dp</item>
        <item name ="android:layout_marginEnd">8dp</item>
    </style>


    <style name = "DefaultTextViewContent">
        <item name ="android:textSize">@dimen/text_secondary</item>
        <item name ="android:textColor">@color/colorPrimaryVariant</item>
        <item name ="android:layout_marginStart">8dp</item>
        <item name ="android:layout_marginTop">16dp</item>
        <item name ="android:layout_marginEnd">8dp</item>
    </style>

    <style name = "DefaultRadioGroup">
        <item name ="android:layout_marginStart">8dp</item>
        <item name ="android:layout_marginTop">16dp</item>
        <item name ="android:layout_marginEnd">8dp</item>
    </style>

    <style name ="DefaultRadioButton">
        <item name ="android:textSize">@dimen/text_secondary</item>
        <item name ="android:textColor">@color/colorPrimaryVariant</item>
        <item name ="android:layout_marginTop">4dp</item>
        <item name ="android:layout_marginEnd">4dp</item>
    </style>



</resources>