<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/viewable_row_cv">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/viewable_row_content_of_cv">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id = "@+id/item_position"
            android:text = "@string/design_sample_for_editing_list_index_for_point"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/text_list_item_titles"
            android:layout_alignParentLeft="true"
            android:textStyle="italic"
            android:layout_margin="4dp"/>

        <TextView
            android:paddingLeft= "8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/viewable_data_point_text_view"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:text="@string/design_sample_for_editing_list_data_for_point"
            android:layout_toEndOf="@id/item_position"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>