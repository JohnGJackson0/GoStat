<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorPrimaryVariant">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_title"
            android:text="@string/directions_view_list_details_title"
            android:textColor="@color/colorWhite"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/directions_list_selection_and_functions"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_paragraph"
            android:textStyle="italic"
            android:layout_margin="8dp"/>

        <View android:background="@color/colorSecondaryVariant"
            android:layout_height="6dp"
            android:layout_width="match_parent"/>
    </LinearLayout>
</android.support.v7.widget.CardView>