<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_details_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/created_meta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/list_details"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <TextView
            android:id="@+id/user_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/editable_list_label"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/frequency_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/frequency_table_list_label"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold|italic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Oct 12"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_secondary"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/list_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/created_meta"
        android:layout_margin="3dp"
        app:contentPadding="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding= "8dp">

            <TextView
                android:id="@+id/list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:text="This is my list name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_important_snippet"
                android:textStyle="italic|bold"
                app:layout_constraintBottom_toTopOf="@+id/list_id"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="14dp" />

            <TextView
                android:id="@+id/list_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="id 15"
                android:textColor="@color/colorPrimaryVariant"
                android:textSize="@dimen/text_important_snippet"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/list_name"
                app:layout_constraintTop_toBottomOf="@+id/list_name"
                tools:layout_editor_absoluteX="7dp" />

            <LinearLayout
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="7dp"
                android:paddingTop="6dp">

                <TextView
                    android:id="@+id/tags_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="4dp"
                    android:gravity="center_vertical"
                    android:text="Tags"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="@dimen/text_secondary" />

                <android.support.v7.widget.CardView
                    android:id="@+id/created_by_user_message_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="12dp"
                    app:cardPreventCornerOverlap="true">

                    <TextView
                        android:id="@+id/created_by_user_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/created_by_user_message"
                        android:textSize="@dimen/text_caption"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/editable_message_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="12dp"
                    app:cardPreventCornerOverlap="true">

                    <TextView
                        android:id="@+id/editable_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/editable_message"
                        android:textSize="@dimen/text_caption"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/created_by_system_message_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardCornerRadius="12dp"
                    app:cardPreventCornerOverlap="true">

                    <TextView
                        android:id="@+id/created_by_system_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/created_by_system_message"
                        android:textSize="@dimen/text_caption"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/locked_message_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="12dp"
                    app:cardPreventCornerOverlap="true">

                    <TextView
                        android:id="@+id/locked_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/locked_message"
                        android:textSize="@dimen/text_caption"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/frequency_table_meta_message_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="12dp"
                    app:cardPreventCornerOverlap="true">

                    <TextView
                        android:id="@+id/frequency_table_meta_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/frequency_table_information_message"
                        android:textSize="@dimen/text_caption"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/static_message_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardCornerRadius="12dp"
                    app:cardPreventCornerOverlap="true">

                    <TextView
                        android:id="@+id/static_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/static_list_message"
                        android:textSize="@dimen/text_caption"
                        android:textStyle="bold" />


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>

