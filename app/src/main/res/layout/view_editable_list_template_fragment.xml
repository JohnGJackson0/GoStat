<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ViewEditableListTemplateFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_editable_list_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/editable_list_view_label_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            app:layout_constraintBottom_toTopOf="@+id/editable_list_view_meta_layout"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/editable_list_view_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:gravity="top|start"
                android:text="@string/editable_list_label"
                android:textColor="@color/primary_text"
                android:textSize="13sp"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/editable_list_view_meta_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            app:layout_constraintBottom_toTopOf="@+id/functions_editable_list_layout"
            app:layout_constraintTop_toBottomOf="@+id/editable_list_view_label_layout">

            <TextView
                android:id="@+id/list_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:textColor="@color/primary_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/list_id_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/secondary_text"
                android:textSize="15sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/functions_editable_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editable_list_view_meta_layout">

            <Spinner
                android:id="@+id/editable_list_functions_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:entries="@array/editable_list_functions"
                android:prompt="@string/view_editable_list_spinner_prompt" />

            <Button
                android:id="@+id/editable_list_execute_function_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="@string/function_button_label" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/view_window"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_editable_list_header_layout">
    </FrameLayout>

</android.support.constraint.ConstraintLayout>