<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.goStat">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ViewableListsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditableListActivity"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_editable_list"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ViewSingleEditableListActivity"
            android:label="@string/view_list_name" />
        <activity android:name=".ViewFrequencyTableActivity"></activity>
    </application>

</manifest>